{% extends 'base.html.twig' %}

{% block body %}
    <h1>Repo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ repo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ repo.name }}</td>
            </tr>
            <tr>
                <th>Fromurl</th>
                <td>{{ repo.fromUrl }}</td>
            </tr>
            <tr>
                <th>Tourl</th>
                <td>{{ repo.toUrl }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('repo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('repo_edit', { 'id': repo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
